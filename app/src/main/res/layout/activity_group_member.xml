<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:orientation="vertical"
    tools:context=".activity.activity.GroupMemberActivity">

    <LinearLayout
        android:id="@+id/group_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/group_member_back_button"
            android:layout_width="24dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/back_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="10"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="30sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="32dp"
            android:layout_weight="1" />

    </LinearLayout>

    <ImageView
        android:id="@+id/group_member_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="24dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/group_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Group Member Name"
        android:layout_gravity="center"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Email"
            android:layout_gravity="start"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/group_member_email_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="address"
            android:layout_gravity="end"
            android:textAlignment="textEnd"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Phone Number"
            android:layout_gravity="start"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/group_member_phone_number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="number"
            android:layout_gravity="end"
            android:textAlignment="textEnd"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>